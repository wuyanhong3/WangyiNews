<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WangYiNews.PictureNews.PictureNewsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/top">
        <ImageButton
            android:id="@+id/left_content_back"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@mipmap/back"/>

        <TextView
            android:id="@+id/left_news_tab"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="28dp"
            android:textColor="@color/Title"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"

            android:text="web"/>

    </LinearLayout>
    <wangyinews.com.wangyinews.MyViewPager.ViewPagerIndicator
        android:id="@+id/picture_news_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/top3">
        <TextView
            android:layout_width="0dp"
              android:layout_weight="1"
            android:text="精选图片"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="精选图片"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="精选图片"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="精选图片"
            android:layout_height="match_parent" />
    </wangyinews.com.wangyinews.MyViewPager.ViewPagerIndicator>
    <android.support.v4.view.ViewPager
        android:layout_marginTop="10dp"
        android:id="@+id/picture_news_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>



</LinearLayout>
