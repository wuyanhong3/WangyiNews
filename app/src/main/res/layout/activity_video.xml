<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="wangyinews.com.wangyinews.WangYiNews.VideoNews.VideoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/top2">
          <ImageButton
              android:id="@+id/video_news_back"
              android:layout_width="60dp"
              android:layout_height="50dp"
              android:layout_gravity="center_vertical"
              android:background="@null"
              android:src="@mipmap/back"
              />
            <TextView
                android:id="@+id/video_news_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="视频新闻"
                android:textSize="@dimen/title"
                android:textColor="@color/Title"
                />
    </LinearLayout>
    <wangyinews.com.wangyinews.MyViewPager.ViewPagerIndicator
        android:id="@+id/video_news_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/top3">
    </wangyinews.com.wangyinews.MyViewPager.ViewPagerIndicator>
    <android.support.v4.view.ViewPager
          android:id="@+id/video_news_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>
